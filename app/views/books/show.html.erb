
<div class="row">
<div class="col-md-4">
 <%= image_tag @b.book_img(:book_show), class: "book-show"%>
</div>

<p class="col-md-7">
<h2>user id:<%= @b.user_id%></h2>

<h2>category:<%= @b.category_id%>  <%= @b.category.name%></h2>

<h2><%= @b.title%>
<%= @b.description%>
<%= @b.author%></h2>

</div>

<div class="row">
    <div class="col-md-4">
        <%=link_to "add reviews",new_book_review_path(@b) %>
    </div>
</div>

<% if user_signed_in? %>
     <% if current_user.id == @b.user_id %>
    <%=link_to "edit",edit_book_path(@b)%>
    <%=link_to "delete",book_path(@b),method: :delete,data: {confirm: "Sure?"}%>
    <% end %>
<% end %>

</p>